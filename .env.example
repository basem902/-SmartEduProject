# ===========================
# SmartEdu Project - Environment Variables Template
# ===========================
# ⚠️ هذا ملف نموذجي فقط - لا تضع قيم حقيقية هنا!
# 📋 انسخ هذا الملف إلى .env وأدخل قيمك الحقيقية
# 💡 cp .env.example .env


# ===========================
# Django Settings
# ===========================
SECRET_KEY=your-secret-key-here-change-this
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1


# ===========================
# Database (Supabase PostgreSQL أو SQLite)
# ===========================
# لـ PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/database
# لـ SQLite (افتراضي):
# DATABASE_URL=sqlite:///db.sqlite3


# ===========================
# Email (Gmail SMTP)
# ===========================
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465


# ===========================
# GEMINI API (AI Integration - اختياري)
# ===========================
GEMINI_API_KEY=your-gemini-api-key-here
# Dashboard: https://aistudio.google.com/app/api-keys


# ===========================
# CORS Settings
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500


# ===========================
# Frontend URL
# ===========================
FRONTEND_URL=http://localhost:5500


# ===========================
# JWT Authentication
# ===========================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440


# ===========================
# Telegram Bot Configuration
# ===========================
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_BOT_USERNAME=YourBotUsername
TELEGRAM_API_ID=your-api-id
TELEGRAM_API_HASH=your-api-hash
API_BASE_URL=http://localhost:8000/api
OTP_SECRET_KEY=your-otp-secret-key-here


# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO
LOG_FILE=bot.log


# ===========================
# File Upload Settings
# ===========================
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,docx,xlsx,jpg,jpeg,png,mp4,mp3,wav


# ===========================
# ClamAV (اختياري - Antivirus)
# ===========================
CLAMAV_HOST=127.0.0.1
CLAMAV_PORT=3310
