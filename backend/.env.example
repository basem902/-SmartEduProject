# Django Settings
SECRET_KEY=change-me-to-random-secret-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Supabase PostgreSQL)
DATABASE_URL=postgres://USER:PASSWORD@HOST:PORT/DBNAME

# Email (Gmail SMTP)
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password-here
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:8000

# JWT
JWT_SECRET_KEY=change-me-to-random-jwt-secret
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# File Upload
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,docx,xlsx,jpg,jpeg,png,mp4,mp3,wav

# ClamAV (Antivirus)
CLAMAV_HOST=127.0.0.1
CLAMAV_PORT=3310

# Telegram API
TELEGRAM_API_ID=your-api-id-here
TELEGRAM_API_HASH=your-api-hash-here
TELEGRAM_BOT_TOKEN=your-bot-token-here
TELEGRAM_BOT_USERNAME=YourBotUsername

# OTP & Security
OTP_SECRET_KEY=your-otp-secret-key-here

# Frontend URL
FRONTEND_URL=http://localhost:5500
